@{
    ViewData["Title"] = "reg";
    Layout = "_LayoutReg";
}

@model Messanger.Models.RegData;
@section registration {
    <body>
        <div class="container">

            <div class="take">
                <div class="logInPanel">
                    <div class="logo">
                        <p class="Text-logo">Namla</p>
                        <div style="width: 11px; height: 5px;"></div>
                        <img src="~/img/Logo-icon.png" />
                    </div>

                    <div class="title-registration">
                        <h3>Регеистрация</h3>

                        <div class="messageDelele">
                            <p>Помните! Вы всегда можете удалить свой аккаунт в личном кабинете, при этом все данные будут удалены без возвратно </p>
                        </div>

                        <div class="center-panelAlign">
                            @using (Html.BeginForm("nextStep", "Reg", FormMethod.Post))
                            {
                                

                                <div class="reg-email" id="itemsMargin-regPanel">
                                    @Html.ValidationMessageFor(x => x.Email)
                                    @Html.EditorFor(x => x.Email, new {htmlAttributes = new {placeholder = "Введите почту"}})
                                </div>

                                <div class="reg-pass" id="itemsMargin-regPanel">
                                    @Html.ValidationMessageFor(x => x.Password)
                                    @Html.EditorFor(x => x.Password, new {htmlAttributes = new {placeholder = "Введите пароль"}})                                
                                </div>

                                <div class="reg-Repeatpass" id="itemsMargin-regPanel">
                                    @Html.ValidationMessageFor(x => x.RepPassword)
                                    @Html.EditorFor(x => x.RepPassword, new {htmlAttributes = new {placeholder = "Повторите пароль"}})
                                </div>

                                <div class="showingPass">

                                    <p onclick="show(this)">Показать пароль</p>
                                </div>

                                <div class="btn-submit-login">
                                    <input type="submit" value="Готово">
                                </div>
                   
                            }

                            <div class="reg-panelInFooter">
                                <p>Всё же у вас есть аккаунт?</p>
                                @Html.ActionLink("Вход", "Index", "Authorization")
                            </div>

                        </div>
                        
                    </div>

                </div>
            </div>
        </div>
        <script src="~/js/showingPass.js"></script>
    </body>
}